# File: .env
# Production environment configuration for Kryptopedia

# MongoDB Atlas Connection - REPLACE WITH YOUR ACTUAL ATLAS URI
DB_NAME=kryptopedia

# JWT Security - GENERATE A NEW SECRET USING: openssl rand -hex 32
JWT_EXPIRATION_HOURS=24

# Production settings
API_DEBUG=false
ENVIRONMENT=production
CORS_ORIGINS=*

# Storage configuration for Render
STORAGE_TYPE=local
MEDIA_FOLDER=/tmp/media

# Template and API settings
TEMPLATES_DIR=templates
API_PREFIX=/api

# Optional services (disabled for simple deployment)
USE_ELASTICSEARCH=false
USE_REDIS=false

# Port (Render will override this automatically)
PORT=8000
